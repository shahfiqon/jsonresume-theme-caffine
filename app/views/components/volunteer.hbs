{{#if resume.volunteer.length}}
<div class="container volunteer-container">
  {{> title value="Volunteer"}}

  {{#each resume.volunteer}}
  <section class="item">
    <div class="work-header">
      <div class="work-position">{{toUpperCase position}}</div>
      <div class="work-company">
        {{organization}}{{#if location}} | {{location}}{{/if}}
      </div>
      <div class="work-date">
        {{#if startDate}}{{formatDate startDate}}{{/if}}{{#if endDate}} - {{formatDate endDate}}{{else}} - Present{{/if}}
      </div>
    </div>

    {{#if summary}}
      <p class="summary">{{summary}}</p>
    {{/if}}

    {{#if highlights.length}}
      <div class="highlights">
        {{#each highlights}}
        <div class="highlight-item">â€¢ {{.}}</div>
        {{/each}}
      </div>
    {{/if}}
  </section>
  {{#unless @last}}<div class="section-separator"><br /><br /></div>{{/unless}}
  {{/each}}
</div>
{{/if}}
