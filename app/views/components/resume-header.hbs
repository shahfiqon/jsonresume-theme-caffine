{{#resume.basics}}
<header class="resume-header">
  <div class="header-left">
    <h1 class="header-name">{{name}}</h1>
    {{#if label}}
      <div class="header-label">{{label}}</div>
    {{/if}}
  </div>
  <div class="header-right">
    <div class="contact-info">
      {{#if phone}}
        <div class="contact-item">
          <span class="contact-label">Phone:</span> {{phone}}
        </div>
      {{/if}}
      {{#if email}}
        <div class="contact-item">
          <span class="contact-label">Email:</span> <a href="mailto:{{email}}">{{email}}</a>
        </div>
      {{/if}}
      {{#if profiles}}
        {{#each profiles}}
          {{#is (lowercase network) "linkedin"}}
            <div class="contact-item">
              <span class="contact-label">LinkedIn:</span> <a href="{{url}}" target="_blank">{{url}}</a>
            </div>
          {{/is}}
        {{/each}}
      {{/if}}
      {{#if profiles}}
        {{#each profiles}}
          {{#is (lowercase network) "github"}}
            <div class="contact-item">
              <span class="contact-label">GitHub:</span> <a href="{{url}}" target="_blank">{{url}}</a>
            </div>
          {{/is}}
        {{/each}}
      {{/if}}
      {{#if website}}
        <div class="contact-item">
          <span class="contact-label">Website:</span> <a href="{{website}}" target="_blank">{{website}}</a>
        </div>
      {{/if}}
    </div>
  </div>
</header>
{{/resume.basics}}
