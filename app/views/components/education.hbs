{{#if resume.education.length}}
<div class="container education-container">
  {{> title value="Education"}}
  
  {{#each resume.education}}
  <section class="item">
    <div class="education-header">
      <div class="education-degree">
        {{#if studyType}}{{studyType}}{{/if}}{{#if area}} {{area}}{{/if}}
      </div>
      <div class="education-institution-row">
        <span class="education-institution">
          {{institution}}{{#if location}} | {{location}}{{/if}}
        </span>
        {{#if startDate}}
        <span class="education-date">
          {{formatDate startDate}} - {{#if endDate}}{{formatDate endDate}}{{else}}Present{{/if}}
        </span>
        {{else}}
          {{#if endDate}}
          <span class="education-date">{{formatDate endDate}}</span>
          {{/if}}
        {{/if}}
      </div>
    </div>

    {{#if gpa}}
    <div class="education-gpa">GPA: {{gpa}}</div>
    {{/if}}

    {{#if specialization}}
    <div class="specialization">{{specialization}}</div>
    {{/if}}

    {{#if courses.length}}
    <ul class="two-column">
      {{#each courses}}
      <li>{{.}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </section>
  {{#unless @last}}<div class="section-separator"></div>{{/unless}}
  {{/each}}
</div>
{{/if}}
